# Database Configuration
DB_NAME=document_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_HOST=your_database_host
DB_PORT=17723

# Prisma Database URL
# For serverless deployments (Vercel), add connection pooling parameters:
# - connection_limit: Maximum connections per serverless function instance (recommended: 1-5)
# - pool_timeout: How long to wait for a connection (in seconds)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require&connection_limit=5&pool_timeout=10"
